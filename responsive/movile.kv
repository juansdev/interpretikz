<MobileWid>:
    GridLayout:
        size_hint_y: None
        cols: 1
        height: self.minimum_height
        rows_minimum: {0:root.height*.1, 1:root.height*.4, 2:root.height*.1, 3:root.height*.2, 4:root.height*.1, 5:root.height*.1}
        spacing: [0,5]
        #TITULO APP
        Label:
            # size_hint_y: .1
            markup: True
            text: "[b][color=FF0000][size=40px]PyTikZ[/size][/color][/b]"
            outline_color: 0,1,0,1
        #AREA DE DIBUJADO
        BoxLayout:
            id: seccion_dibujar
            canvas:
                Color:
                    rgb: 1,1,1#Fondo blanco
                Rectangle:
                    size: self.size
                    pos: self.pos
        #Barra acceso rapido superior.
        ScrollView:
            # size_hint_y: .1
            GridLayout:
                id: acceso_rapido_sup
                size_hint_x: None
                rows: 1
                col_default_width: root.width*0.30#30% del ancho total de ventana.
                width: self.minimum_width
                spacing: [5,0]
                Button:
                    background_color: [1,1,1,1]
                Button:
                    background_color: [1,1,1,1]
                Button:
                    background_color: [1,1,1,1]
                Button:
                    background_color: [1,1,1,1]
                Button:
                    background_color: [1,1,1,1]
                Button:
                    background_color: [1,1,1,1]
                Button:
                    background_color: [1,1,1,1]
                Button:
                    background_color: [1,1,1,1]
        #AREA DE CODIGO
        BoxLayout:
            # size_hint_y: .3
            canvas:
                Color:
                    rgb: 1,1,1#Fondo blanco
                Rectangle:
                    size: self.size
                    pos: self.pos
            TextInput:
                id: codigo_tikz
                hint_text: "Escribir aqui comandos de TikZ..."
        #Barra acceso rapido inferior.
        ScrollView:
            # size_hint_y: .1
            GridLayout:
                id: acceso_rapido_bot
                size_hint_x: None
                rows: 1
                col_default_width: root.width*0.30#30% del ancho total de ventana.
                width: self.minimum_width
                spacing: [5,0]
                Button:
                    background_color: [1,1,1,1]
                Button:
                    background_color: [1,1,1,1]
                Button:
                    background_color: [1,1,1,1]
                Button:
                    background_color: [1,1,1,1]
                Button:
                    background_color: [1,1,1,1]
                Button:
                    background_color: [1,1,1,1]
                Button:
                    background_color: [1,1,1,1]
                Button:
                    background_color: [1,1,1,1]
        Button:
            # size_hint_y: .1
            text: "RECOMPILAR"
            background_color: [.2274509803921569,.8470588235294118,.1019607843137255,1]
            on_press: app.compilar(codigo_tikz.text)