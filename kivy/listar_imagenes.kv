#:kivy 2.0.0
<ListarImagenes>:
    size_hint_y: None
    height: dp(400)
    orientation: 'vertical'
    spacing: dp(1)
    ScrollView:
        bar_color: .1686274509803922, .1764705882352941, .1843137254901961, 1
        bar_inactive_color: .5019607843137255, .5019607843137255, .5019607843137255, 1
        bar_width: dp(30)
        effect_cls: "ScrollEffect"
        scroll_type: ['bars']
        size_hint_y: .9
        do_scroll_x: False
        MDGridLayout:
            size_hint_x: 1
            id:lista_imagenes
            cols: 3
            row_default_height: (self.width - self.cols*self.spacing[0]) / self.cols
            row_force_default: True
            adaptive_height: True
            padding: dp(4), dp(4)
            spacing: dp(4)
    MDBoxLayout:
        id: container_btn
        spacing: dp(4)
        size_hint_y: .1
        MDRectangleFlatIconButton:
            width: container_btn.size[0]
            font_name: "media/fonts/OpenSans-SemiBold"
            font_style: "Button"
            height: dp(35)
            icon: "folder"
            text: "Buscar imagen"
            on_release: app.mostrar_explorador('cargar_imagen',root)