<MobilWid>:
    MDGridLayout:
        cols: 1
        height: self.minimum_height
        rows_minimum: {0:root.height*.1, 1:root.height*.8, 2:root.height*.03, 3:root.height*.07, 4:root.height*.7, 5:root.height*.03, 6:root.height*.07, 7:root.height*.07, 8:root.height*.03, 9:root.height*.05}
        size_hint_y: None
        spacing: [0,15]
        
        #SUPERIOR - 0
        MDToolbar:
            size_hint_y: None
            height: dp(root.height*.1)
            md_bg_color: app.theme_cls.accent_dark
            #Titulo
            title: "InterpreTikZ"
            anchor_title: "center"
            #Acceder a herramientas
            left_action_items: [["folder-multiple-image", app.listar_imagenes_popup],["invert-colors", app.alternar_estilos]]

        #AREA DE DIBUJADO - 1
        MDBoxLayout:
            id: seccion_dibujar
            canvas:
                Color:
                    rgb: 1,1,1#Fondo blanco
                Rectangle:
                    size: self.size
                    pos: self.pos
        #Generar comandos. - 2
        MDLabel:
            font_name: "media/fonts/OpenSans-ExtraBold"
            font_style: "H6"
            halign: "center"
            text: "Generar comandos"
        #Barra acceso rapido superior. -3
        ScrollView:
            MDGridLayout:
                id: acceso_rapido_sup
                size_hint_x: None
                rows: 1
                width: self.minimum_width
                spacing: [5,0]
        #AREA DE CODIGO - 4
        MDTextFieldRect:
            id: codigo_tikz
            hint_text: "Escribir aqui comandos de TikZ..."
        #Dibujos guardados. - 5
        MDLabel:
            font_name: "media/fonts/OpenSans-ExtraBold"
            font_style: "H6"
            halign: "center"
            text: "Dibujos guardados"
        #Barra acceso rapido inferior. - 6
        ScrollView:
            MDGridLayout:
                id: acceso_rapido_bot
                size_hint_x: None
                rows: 1
                col_default_width: root.width*0.45#45% del ancho total de ventana.
                width: self.minimum_width
                spacing: [15,0]
        #Guardar un dibujo con todos los comandos.        
        #Input. - 7
        MDTextFieldRect:
            font_name: "media/fonts/OpenSans-Regular"
            hint_text: "Nombre del dibujo"
            mode: "rectangle"
            id: nombre_dibujo
        #Guardar. - 8
        MDRaisedButton:
            size_hint: [1, None]
            height: dp(35)
            font_name: "media/fonts/OpenSans-SemiBold"
            font_style: "H6"
            text: "Guardar"
            md_bg_color: [1, 1, 0, 1]
            on_press: app.guardar_dibujo(nombre_dibujo.text,codigo_tikz.text)
        #BOTON COMPILAR - 9
        MDRaisedButton:
            size_hint_x: 1
            font_name: "media/fonts/OpenSans-Bold"
            font_style: "H5"
            halign: "center"
            text: "RECOMPILAR"
            md_bg_color: app.theme_cls.primary_dark
            on_press: app.compilar(codigo_tikz.text)
            canvas:
                Rectangle:
                    source:"media/iconos/reload.png"
                    pos: [self.center[0]-115,self.center[1]-15]
                    size: 30,30
        #PIE DE PAGINA.
        BoxLayout:
            size_hint_x: 1
            size_hint_y: None
            height: dp(root.height*.20)
            MDBottomAppBar:
                MDToolbar:
                    id: bottomAppBar
                    title: "Todos los derechos reservados Â©"
                    icon: "media/iconos/logo.png"
                    type: "bottom"
                    mode: "end"
                    on_action_button: app.mostrar_informacion()