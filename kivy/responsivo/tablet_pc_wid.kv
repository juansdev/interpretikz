<TabletPcWid>:
    cols: 1
    spacing: 10
    #SUPERIOR
    MDToolbar:
        size_hint_y: None
        height: dp(root.height*.1)
        md_bg_color: app.theme_cls.accent_dark
        #Titulo
        title: "InterpreTikZ"
        anchor_title: "center"
        #Acceder a herramientas
        left_action_items: [["folder-multiple-image", app.listar_imagenes_popup],["invert-colors", app.invertir_estilo]]
    #CUERPO APP
    MDGridLayout:
        size_hint_y: None
        height: dp(root.height*.78)
        cols: 2
        spacing: [5,0]
        #SECCION IZQUIERDA
        MDBoxLayout:
            ScrollView:
                bar_width: 4
                bar_color: [0,0,0,1]
                MDGridLayout:
                    cols: 1
                    height: self.minimum_height
                    rows_minimum: {0:root.height*.03,1:root.height*.07, 2:root.height*.7, 3:root.height*.03, 4:root.height*.07, 5:root.height*.07, 6:root.height*.07, 7:root.height*.05}
                    size_hint_y: None
                    spacing: [0,20]
                    #Generar comandos. - 0
                    MDLabel:
                        font_name: "media/fonts/OpenSans-SemiBold"
                        font_style: "H6"
                        theme_text_color: "Secondary"
                        halign: "center"
                        text: "Generar comandos"
                    #Barra acceso rapido superior. - 1
                    ScrollView:
                        MDGridLayout:
                            id: acceso_rapido_sup
                            size_hint_x: None
                            rows: 1
                            width: self.minimum_width
                            spacing: [5,0]
                    #AREA DE CODIGO - 2
                    MDTextFieldRect:
                        id: codigo_tikz
                        hint_text: "Escribir aqui comandos de TikZ..."
                    #Dibujos guardados. - 3
                    MDLabel:
                        font_name: "media/fonts/OpenSans-SemiBold"
                        font_style: "H6"
                        theme_text_color: "Secondary"
                        halign: "center"
                        text: "Dibujos guardados"
                    #Barra acceso rapido inferior. - 4
                    ScrollView:
                        MDGridLayout:
                            id: acceso_rapido_bot
                            size_hint_x: None
                            rows: 1
                            col_default_width: root.width*0.20#15% del alto total de ventana.
                            width: self.minimum_width
                            spacing: [10,0]
                    #Guardar un dibujo con todos los comandos.
                    #Input. - 5
                    MDTextField:
                        hint_text: "Nombre del dibujo"
                        mode: "rectangle"
                        id: nombre_dibujo
                    #Boton. - 6
                    MDRaisedButton:
                        size_hint: [1, None]
                        height: dp(35)
                        font_name: "media/fonts/OpenSans-SemiBold"
                        font_style: "H6"
                        text: "Guardar"
                        md_bg_color: [1, 1, 0, 1]
                        on_press: app.guardar_dibujo(nombre_dibujo.text,codigo_tikz.text)
                    #BOTON COMPILAR - 7
                    MDRaisedButton:
                        size_hint_x: 1
                        font_name: "media/fonts/OpenSans-Bold"
                        font_style: "H5"
                        halign: "center"
                        text: "RECOMPILAR"
                        md_bg_color: app.theme_cls.primary_dark
                        on_press: app.compilar(codigo_tikz.text)
                        canvas:
                            Rectangle:
                                source:"media/iconos/reload.png"
                                pos: [self.center[0]-115,self.center[1]-15]
                                size: 30,30
        #SECCION DERECHA
        #AREA DE DIBUJADO
        MDBoxLayout:
            id: seccion_dibujar
            canvas:
                Color:
                    rgb: 1,1,1#Fondo blanco
                Rectangle:
                    size: self.size
                    pos: self.pos
    #PIE DE PAGINA.
    BoxLayout:
        size_hint_x: 1
        size_hint_y: None
        height: dp(root.height*.12)
        MDBottomAppBar:
            MDToolbar:
                id: bottomAppBar
                title: "Desarrollado por Juan Serrano"
                icon: "media/iconos/logo.png"
                type: "bottom"
                mode: "end"
                on_action_button: app.mostrar_informacion()