<ListarImagenesWid>:
    size_hint_y: None
    height: dp(400)
    orientation: 'vertical'
    spacing: dp(1)
    ScrollView:
        size_hint_y: .9
        MDGridLayout:
            size_hint_x: 1
            id:lista_imagenes
            cols: 3
            row_default_height: (self.width - self.cols*self.spacing[0]) / self.cols
            row_force_default: True
            adaptive_height: True
            padding: dp(4), dp(4)
            spacing: dp(4)
    MDBoxLayout:
        spacing: dp(4)
        size_hint_y: .1
        MDRectangleFlatIconButton:
            size_hint_y: None
            size_hint_x: 1
            font_name: "media/fonts/OpenSans-SemiBold"
            font_style: "Button"
            height: dp(35)
            icon: "folder"
            text: "Buscar imagen"
            on_release: app.mostrar_explorador('cargar_imagen')